<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

android:id="@+id/ScrollView01"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:scrollbars="vertical">
<LinearLayout
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent">

    <!--Form controls here-->
    <TextView
        android:id="@+id/TextViewTitle"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="@string/employeeIdeaTitle"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/EditTitleOfIdea"
        android:layout_width="266dp"
        android:layout_height="62dp"
        android:hint="@string/employeeIdeaTitleOfIdea"
        android:inputType="textTitleOfIdea"
        android:autofillHints="hello" />

    <EditText
        android:id="@+id/EditIdeaLocation"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="@string/employeeIdeaLocationSite"
        android:inputType="textIdeaLocation"
        android:autofillHints="hello" />

    <Spinner
        android:id="@+id/SpinnerFeedbackType"
        android:layout_height="wrap_content"
        android:prompt="@string/employeeIdeaFeasibility"
        android:layout_width="fill_parent"
        android:entries="@array/employeeIdeaFeasibility" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>